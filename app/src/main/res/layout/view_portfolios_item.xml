<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_potrfolio"
            android:layout_width="322dp"
            android:layout_height="19dp"
            android:layout_marginEnd="11dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="My Portfolio 1"
            android:textAlignment="center"
            android:textColor="#FF87A1C5"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/etherium_background"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="16dp"
            android:background="#FF6270C2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_potrfolio" />

        <View
            android:id="@+id/bitcoin_background"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="8dp"
            android:background="#FFFFC107"
            app:layout_constraintBottom_toBottomOf="@+id/etherium_background"
            app:layout_constraintEnd_toStartOf="@+id/etherium_background"
            app:layout_constraintTop_toTopOf="@+id/etherium_background" />

        <View
            android:id="@+id/crypto_background"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:background="#FFFF6600"
            app:layout_constraintBottom_toBottomOf="@+id/etherium_background"
            app:layout_constraintStart_toEndOf="@+id/etherium_background"
            app:layout_constraintTop_toTopOf="@+id/etherium_background" />

        <TextView
            android:id="@+id/text_cost"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="323 000"
            android:textColor="#FF000000"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etherium_background" />

        <TextView
            android:id="@+id/text_dollar"
            android:layout_width="28dp"
            android:layout_height="46dp"
            android:text=" $"
            android:textColor="#FF390000"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_cost"
            app:layout_constraintStart_toEndOf="@+id/text_cost"
            app:layout_constraintTop_toTopOf="@+id/text_cost" />

        <TextView
            android:id="@+id/text_total"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="Total value"
            android:textColor="#FF87A1C5"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/text_difference"
            app:layout_constraintStart_toStartOf="@+id/text_cost"
            app:layout_constraintTop_toBottomOf="@+id/text_cost" />

        <TextView
            android:id="@+id/text_difference"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:text="+$ 74 900 (23%)"
            android:textColor="#FF00C9B3"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_total"
            app:layout_constraintEnd_toEndOf="@+id/text_dollar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/text_cost"
            app:layout_constraintTop_toTopOf="@+id/text_total" />

        <View
            android:id="@+id/devider_orange"
            android:layout_width="228dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFC107"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_total" />

        <View
            android:id="@+id/devider_blue"
            android:layout_width="97dp"
            android:layout_height="10dp"
            android:background="#FF6271C2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/devider_orange"
            app:layout_constraintTop_toTopOf="@+id/devider_orange" />

        <View
            android:id="@+id/devider_red"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="#FFFF6600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/devider_blue"
            app:layout_constraintTop_toTopOf="@+id/devider_blue" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>